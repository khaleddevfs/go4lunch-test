<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp">


    <ImageView
        android:id="@+id/drawer_image_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/header"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/drawer_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/no_picture"
        />

    <TextView
        android:id="@+id/drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/drawer_image"
        app:layout_constraintTop_toTopOf="@id/drawer_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:text="khaled al hajali"
        />

    <TextView
        android:id="@+id/drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/drawer_image"
        app:layout_constraintBottom_toBottomOf="@id/drawer_image"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/White"
        android:text="testdev2110@gmail.com"
        />




</androidx.constraintlayout.widget.ConstraintLayout>